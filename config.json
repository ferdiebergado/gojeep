{
  "db": {
    "driver": "pgx",
    "ping_timeout": 10,
    "max_open_conns": 20,
    "max_idle_conns": 10,
    "conn_max_lifetime": 300,
    "conn_max_idle_time": 60
  },
  "server": {
    "read_timeout": 5,
    "write_timeout": 10,
    "idle_timeout": 60,
    "shutdown_timeout": 5
  },
  "jwt": {
    "jti_len": 32,
    "issuer": "http://localhost:8888"
  },
  "email": {
    "sender": "noreply@example.com",
    "verify_ttl": 300,
    "template_path": "web/templates",
    "layout_file": "base.html"
  }
}
